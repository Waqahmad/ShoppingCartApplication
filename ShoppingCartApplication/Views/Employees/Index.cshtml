@model IEnumerable<ShoppingCartApplication.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<style>
 .borders {
    border-bottom:1px solid #999;
    width:100%;
}


</style>
<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-sm-3 col-lg-3">
            <h3>@Html.DisplayFor(modelItem => item.EmployeeName)</h3>
            <div> <img src="@Url.Content("~/Images/EmployeePictures/"+item.EmployeePicture)" width="100" height="100" /></div>
            <p>@Html.DisplayFor(modelItem => item.Description)</p>
            <p><span style="font-weight:bold">Contact #</span> @Html.DisplayFor(modelItem => item.ContactNo)</p>
            <p><span style="font-weight:bold">Address:</span>@Html.DisplayFor(modelItem => item.Address) </p>
            <div>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) | @Html.ActionLink("Details", "Details", new { id = item.ID }) | @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </div>
        </div>
     

    }
</div>





