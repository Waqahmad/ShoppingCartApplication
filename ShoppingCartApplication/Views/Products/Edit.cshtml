                @if (Model.ProductImage == null)
                {
                    @:None
                 }
                else
                {
                    <img src="@Url.Content("~/Images/Product/" + Model.ProductImage)" width="70" height="70">
                }
              
                @Html.HiddenFor(model => model.ProductImage)
                <input type="file" name="file" id="file" />
            </div>
        </div>

